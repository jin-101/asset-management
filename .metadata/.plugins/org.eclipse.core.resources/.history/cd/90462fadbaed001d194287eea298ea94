package controller;

import java.util.Map;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpSession;

import service.AccountService;
import vo.AccountVO;

public class SigninController implements CommonControllerInterface {

	@Override
	public String execute(Map<String, Object> data) throws Exception {
		String method = (String) data.get("method");
		String page = "";
		if(method.equals("GET")) {
			page = "signin.jsp";
		}else {
			HttpServletRequest request = (HttpServletRequest) data.get("request");
			String id = request.getParameter("loginID");
			String password = request.getParameter("loginPW");
			AccountService service = new AccountService();
			AccountVO account = service.userLogin(id, password);
			String path = request.getContextPath();
			System.out.println(account);
			if(account != null) {
				HttpSession session = request.getSession();
				session.setAttribute("loginUser", account);
				page = "redirect:" + path + "/login/menu.do";
			}else {
				page = "redirect:"+ path + "/login/signin.do";
			}
//			if(resultCode == 1) {
//				//로그인 성공
//				HttpSession session = request.getSession();
//				session.setAttribute("loginUser", session);
//				page = "redirect:" + path + "/login/menu.do";
//			}else if(resultCode == 0) {
//				page = "responseBody:비밀번호가 일치하지 않습니다.";
//			}else if(resultCode == -1) {
//				page = "responseBody:존재하지 않는 아이디입니다.";
//			}else {
//				page = "responseBody:서버 오류가 발생했습니다. 잠시 후 다시 시도해주세요.";
//			}
		}
			
		return page;
	}

}


