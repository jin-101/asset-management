<jsp:include page="/common/common.jsp"></jsp:include>
<script type="text/javascript">
	$(function(){
		$(".loginPage-btn").click(()=>{
			const id = $("#admin_id").val();
			const pw = $("#admin_password").val();
			$.ajax({
				url:"/login/signin.do",
				data:{
					loginID:id,
					loginPW:pw
				},
				method:"POST",
				success:(res) => {
					console.log(res);
				},
				error: (err)=>{
					
				}
			});
		});
		
	});
</script>
</head>
<body>
	<div class="login-main">
		<div class="login-container-signin">
			<div class="login-container-form">
				<h2 class="login-container-form-title">로그인</h2>
				<input type="text" id="admin_id" class="login-container-form-el"
					placeholder="아이디를 입력하세요." /> 
				<input type="password" id="admin_password" class="login-container-form-el"
					placeholder="비밀번호를 입력하세요." />
				<button class="loginPage-btn">관리자 로그인</button>
				<a href="javascript:void()" class="signup-link">관리자 회원가입</a>
			</div>
		</div>
	</div>
